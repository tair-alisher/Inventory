            </dt>

            <dd>
                @Html.DisplayFor(model => model.StatusType.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ChangeDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ChangeDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Comments)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Comments)
            </dd>

        </dl>
    </div>
    <div class="form-group">
        <div class="btn-group" role="group">
            <a href="@Url.Action("Edit", "History", new { id = Model.Id})" class="btn btn-success"><i class="fa fa-pencil" aria-hidden="true" title="Редактировать" data-toggle="tooltip" data-placement="top"></i> Редактировать</a>
            <a href="@Url.Action("Index", "History")" class="btn btn-info"><i class="fa fa-arrow-left" aria-hidden="true" title="Назад" data-toggle="tooltip" data-placement="top"></i> Назад</a>
        </div>
